<form method="POST" action="/register" accept-charset="UTF-8" class="form-horizontal" autocomplete="off" enctype="multipart/form-data">

  <div class="form-group row">
    <label for="example-text-input" class="col-4 col-form-label">Email address</label>
    <div class="col-8">
      <input class="form-control" name="email" type="text" value="" placeholder="e.g. jack@example.com" />
    </div>
  </div>

  <div class="form-group row">
    <label for="example-text-input" class="col-4 col-form-label">Password</label>
    <div class="col-8">
      <input class="form-control" name="password" type="password" value="" placeholder="*******" />
    </div>
  </div>
  <div class="form-group row">
    <label for="example-text-input" class="col-4 col-form-label">Confirm Password</label>
    <div class="col-8">
      <input class="form-control" name="confirm_password" type="password" value="" placeholder="*******" />
    </div>
  </div>
  <div class="form-group row">
    <label for="example-text-input" class="col-4 col-form-label">Profile image (optional)</label>
    <div class="col-8">
      <input class="form-control" name="profile_image" type="file" />
    </div>
  </div>



  <br />
  <br />
  <div class="form-group">
    <div class="offset-sm-2 col-sm-8">
      <input class="btn btn-lg btn-primary btn-block" name="submit" type="submit" value="Sign up today">
    </div>
  </div>
</form>